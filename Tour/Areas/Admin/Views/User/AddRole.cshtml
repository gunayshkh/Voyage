@model UserViewModel
@{
    ViewData["Title"] = "AddRole";
}

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <form enctype="multipart/form-data" method="post" asp-controller="User" asp-action="AddRole" class="form-horizontal">
                <div class="card-body">
                    <h4 class="card-title">Update Tour</h4>
                    <div class="form-group row">
                        <label  class="col-sm-3 text-end control-label col-form-label">FullName</label>
                        <div class="col-sm-9">
                            <h3>@Model.FullName</h3>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label  class="col-sm-3 text-end control-label col-form-label">UserNAme</label>
                        <div class="col-sm-9">
                            <h3>@Model.UserName</h3>
                        </div>
                    </div>
                    
                    <div class="form-group row">
                        <label asp-for="RoleId" class="col-sm-3 text-end control-label col-form-label">Roles</label>
                        <div class="col-sm-9">
                            <select asp-for="RoleId" type="text" class="form-select" placeholder="Role">
                                <option value="0" disabled selected>Select a Role</option>
                                @foreach (var role in ViewBag.Roles)
                                {
                                    @*<option value="@role.Id">@role.Name </option>*@
                                    if (role.Name == Model.Role)
                                      {
                                          <option value="@role.Id" disabled>@role.Name</option>
                                      }
                                      else
                                      {
                                          <option value="@role.Id">@role.Name</option>
                                      }
                                }
                                </select>

                                                        
                            @*</select> <span class="text-danger" asp-validation-for="RoleId"></span>*@
                        </div>
                    </div>
                  
                    <div class="border-top">
                        <div class="card-body">
                            <button type="submit" class="btn btn-primary"> Submit </button>
                            <button asp-area="Admin" asp-controller="User" asp-action="Index"> Go back to the UserList</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>





   

