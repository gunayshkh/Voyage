@model Trip
@{
    ViewData["Title"] = "Delete";
}


<div class="card mb-3">
   <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text"><strong>Description:</strong> @Html.Raw(Model.Description)</p>
        <p class="card-text"><strong>Price:</strong> $ @Model.Price</p>
        <p class="card-text"><strong>AdditionalInfo:</strong> @Model.AdditionalInfo</p>
        <p class="card-text"><strong>City:</strong> @Model.City</p>
        <p class="card-text"><strong>Capacity:</strong> @Model.Capacity</p>
        <p class="card-text"><strong>Duration:</strong> @Model.Duration days</p>

    </div>
     <form method="post" class="ms-3 mb-5 mt-5"  asp-controller="Tour" asp-action="Delete">
        <h2>Are you sure you want to delete?</h2>
        <button type="submit" class="btn btn-danger">Yes</button>
        <a class="btn btn-info"  asp-controller="Tour" asp-action="Index">Exit</a>
    </form>

</div>
