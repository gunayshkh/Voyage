@model UpdateTourViewModel
@{
    ViewData["Title"] = "Update";
}
<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <form enctype="multipart/form-data" method="post" asp-controller="Tour" asp-action="Create" class="form-horizontal">
                <div class="card-body">
                    <h4 class="card-title">Create a new Tour</h4>
                    <div class="form-group row">
                        <label asp-for="TourName" class="col-sm-3 text-end control-label col-form-label">Tour Name</label>
                        <div class="col-sm-9">
                            <input asp-for="TourName" type="text" class="form-control" placeholder="Tour Name" /> <span class="text-danger" asp-validation-for="TourName"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="TourDescription" class="col-sm-3 text-end control-label col-form-label"> Tour Description</label>
                        <div class="col-sm-9">
                            <textarea asp-for="TourDescription" class="form-control" id="TourDescription" placeholder="Tour Description"></textarea>
                        </div> <span class="text-danger" asp-validation-for="TourDescription"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="CityId" class="col-sm-3 text-end control-label col-form-label">City</label>
                        <div class="col-sm-9">
                            <select asp-for="CityId" type="text" class="form-select" placeholder="City">
                                <option value="0" disabled selected>Select a City</option>
                                @foreach (var city in Model.City)
                                {
                                    <option value="@city.Id">@city.Name </option>
                                }
                            </select> <span class="text-danger" asp-validation-for="CityId"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="AdditionalInfo" class="col-sm-3 text-end control-label col-form-label">AdditionalInfo</label>
                        <div class="col-sm-9">
                            <textarea asp-for="AdditionalInfo" id="Description" class="form-control" placeholder="Additional Info"></textarea>
                        </div> <span class="text-danger" asp-validation-for="AdditionalInfo"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Price" class="col-sm-3 text-end control-label col-form-label">Price</label>
                        <div class="col-sm-9">
                            <input asp-for="Price" type="number" class="form-control" placeholder="Price" />
                        </div> <span class="text-danger" asp-validation-for="Price"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Duration" class="col-sm-3 text-end control-label col-form-label">Duration</label>
                        <div class="col-sm-9">
                            <input asp-for="Duration" type="number" class="form-control" placeholder="Duration" />
                        </div> <span class="text-danger" asp-validation-for="Duration"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Review" class="col-sm-3 text-end control-label col-form-label">Review</label>
                        <div class="col-sm-9">
                            <input asp-for="Review" type="number" class="form-control" placeholder="Review" />
                        </div> <span class="text-danger" asp-validation-for="Review"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Capacity" class="col-sm-3 text-end control-label col-form-label">Capacity</label>
                        <div class="col-sm-9">
                            <input asp-for="Capacity" type="number" class="form-control" placeholder="Capacity" />
                        </div> <span class="text-danger" asp-validation-for="Capacity"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Image" class="col-md-3">File Upload</label>
                        <div class="col-md-9">
                            <div class="custom-file">
                                <input asp-for="Image" type="file" class="custom-file-input" accept="image/*" /> <span class="text-danger" asp-validation-for="Image"></span> @*
                                    <label class="custom-file-label" asp-for="Image">Choose file...</label>*@ @*
                                    <div class="invalid-feedback"> Example invalid custom file feedback </div> *@
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="border-top">
                        <div class="card-body">
                            <button type="submit" class="btn btn-primary"> Submit </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>





    @section Scripts {

        <partial name="_ValidatePartial" />

        <script src="https://cdn.ckeditor.com/ckeditor5/31.1.0/classic/ckeditor.js"></script>

        <script>
            ClassicEditor
                .create(document.querySelector('#TourDescription'))
                .then(editor => {
                    console.log(editor);
                })
                .catch(error => {
                    console.error(error);
                });
        </script>
    }
